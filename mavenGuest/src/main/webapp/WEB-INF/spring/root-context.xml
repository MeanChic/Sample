	<!-- pool 적용context를 사용하지 않는다 -->
	<bean id="driverManagerDataSource" destroy-method="close" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
		<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"></property>
		<property name="username" value="jsp"/>
		<property name="password" value="1234"/>
		<property name="maxActive" value="30"/>
		<property name="maxIdle" value="30"/>
		<property name="maxWait" value="1000"/>
		<property name="defaultAutoCommit" value="true"/>
	</bean>
	
	<!-- 5-2 Mapper Resource : pool (여기선 GuestMapper.xml) -->
	<bean id="sqlSessionFactoryBean" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="mapperLocations">
			<list>
				<value>classpath:com/java/guest/dao/mapper/GuestMapper.xml</value>
				                
			</list>		
		</property>
		<property name="dataSource" ref="driverManagerDataSource"></property>
	</bean>
	
	<!-- 5.3 sqlSessionFactoryBuilder().build(DriverManager, Mapper Resource) -->
	<bean id="sqlSessionTemplate" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="sqlSessionFactoryBean"/>
	</bean>
		
</beans>
